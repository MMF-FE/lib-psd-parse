{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["**/dist", "**/node_modules"],
    "ts-node": {
        "transpileOnly": true
    }
}
